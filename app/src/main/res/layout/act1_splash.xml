<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main1"
    android:weightSum="1"
    android:orientation="vertical"
    tools:context="com.techwork.kjc.mvp_project.activity.ACT1_Splash">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:weightSum="1"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:gravity="center"
        >
        <ImageView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:src="@drawable/title" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_weight="0.25"
        android:weightSum="1"
        android:gravity="center"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/act2_image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            app:srcCompat="@drawable/fource" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/first" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:weightSum="1"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="0.3"
            app:srcCompat="@drawable/third" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="0.3"
            app:srcCompat="@drawable/second" />
    </LinearLayout>

    <LinearLayout
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_weight="0.1"
        android:weightSum="1"
        android:gravity="center"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/linkSignin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:text="로  그  인"
            android:background="@color/colorWhite"
            android:textColor="@color/main1"
            android:textSize="25dp"
            android:textStyle="bold"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_marginTop="1dp"
        android:layout_weight="0.1"
        android:weightSum="1"
        android:gravity="center"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/linkSignup"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:text="회  원  가  입"
            android:background="@drawable/my_button_bg"
            android:textColor="@color/colorWhite"
            android:textSize="20dp"
            android:textStyle="bold"

            />
    </LinearLayout>





</LinearLayout>
