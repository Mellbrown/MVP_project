<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/tabArm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="팔"
        app:layout_constraintEnd_toStartOf="@+id/tabLeg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/tabLeg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="다리"
        app:layout_constraintEnd_toStartOf="@+id/tabBack"
        app:layout_constraintStart_toEndOf="@+id/tabArm"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/tabBack"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="등(배)"
        app:layout_constraintEnd_toStartOf="@+id/tabAllBody"
        app:layout_constraintStart_toEndOf="@+id/tabLeg"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/tabAllBody"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="전신"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tabBack"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tabArm"
        app:srcCompat="@android:color/background_light" />

    <ImageView
        android:id="@+id/pivot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView9"
        app:layout_constraintVertical_bias="0.39"
        app:srcCompat="@android:color/transparent" />

</android.support.constraint.ConstraintLayout>